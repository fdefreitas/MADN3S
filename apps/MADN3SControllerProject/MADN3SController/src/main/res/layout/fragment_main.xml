<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttons_layout"
        android:layout_margin="@dimen/container_margin">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/scan"
            android:id="@+id/scan_button"
            android:layout_gravity="left" android:layout_weight="1"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/connect"
            android:id="@+id/connect_button" android:layout_weight="1" android:layout_gravity="right"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/nxt"
        android:id="@+id/nxt_connection_textView"
        android:layout_margin="@dimen/container_margin" android:background="#FF9900"
        android:padding="@dimen/subtitle_padding" android:textColor="@color/steady_grey"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/nxt_devices_layout"
        android:visibility="visible"
        android:layout_margin="@dimen/container_margin" android:baselineAligned="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light" android:layout_weight="1"
            android:layout_marginRight="@dimen/nested_list_margin" android:id="@+id/nxt_paired_devices_layout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/paired_devices"
                android:id="@+id/nxt_paired_devices_textView"
                android:background="@color/route_66" android:padding="@dimen/list_item_padding"
                android:gravity="center_horizontal" android:textColor="@color/steady_grey"/>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nxt_paired_devices_listView"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/nested_list_margin" android:id="@+id/nxt_new_devices_layout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/new_devices"
                android:id="@+id/nxt_new_devices_textView"
                android:padding="@dimen/list_item_padding" android:background="@color/route_66"
                android:gravity="center_horizontal" android:textColor="@color/steady_grey"/>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nxt_new_devices_listView"/>
        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nxt_discovery_progressBar"
        android:indeterminate="true"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:text="@string/cameras"
        android:id="@+id/cameras_connection_textView"
        android:layout_margin="@dimen/container_margin" android:padding="@dimen/subtitle_padding"
        android:textColor="@color/route_66" android:background="@color/BC"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:focusableInTouchMode="false"
        android:id="@+id/cameras_devices_layout"
        android:layout_margin="@dimen/container_margin" android:baselineAligned="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light" android:layout_weight="1"
            android:id="@+id/cameras_paired_devices_layout" android:layout_marginRight="@dimen/nested_list_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/paired_devices"
                android:id="@+id/cameras_paired_devices_textView"
                android:background="@color/route_66"
                android:textColor="@color/steady_grey" android:padding="@dimen/subtitle_padding"
                android:gravity="center_horizontal"/>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/camera_paired_devices_listView"
                android:choiceMode="multipleChoice" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" android:id="@+id/cameras_new_devices_layout"
            android:layout_marginLeft="@dimen/nested_list_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/new_devices"
                android:id="@+id/cameras_new_devices_textView"
                android:gravity="center_horizontal"
                android:padding="@dimen/subtitle_padding" android:background="@color/route_66"
                android:textColor="@color/steady_grey"/>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cameras_new_devices_listView"
                android:choiceMode="multipleChoice"/>
        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cameras_discovery_progressBar"
        android:indeterminate="true"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

</LinearLayout>


